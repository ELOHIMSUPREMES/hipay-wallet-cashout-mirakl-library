{
  "name": "Mirakl",
  "apiVersion": 3.20,
  "description": "",
  "operations": {
    "GetVendors": {
      "httpMethod": "GET",
      "uri": "/api/shops",
      "summary": "Fetch all shops from Mirakl",
      "parameters": {
        "shopIds": {
          "type": "array",
          "required": false,
          "location": "query",
          "sentAs": "shop_ids",
          "filters" : [
            {
              "method": "join",
              "args" : [",", "@value"]
            }
          ]
        },
        "updatedSince": {
          "type": "object",
          "instanceOf" : "DateTimeInterface",
          "location": "query",
          "sentAs": "updated_since",
          "filters" : [
            {
              "method": "date_format",
              "args" : ["@value", "Y-m-d"]
            }
          ]
        },
        "paginate": {
          "type": "boolean",
          "default" : false,
          "description": "[optional] Control the pagination usage. Default: false (different from api)",
          "location": "query",
          "sentAs": "paginate",
          "filters" : [
            {
              "method": "json_encode",
              "args" : ["@value"]
            }
          ]
        }
      }
    },
    "GetDocuments": {
      "httpMethod": "GET",
      "uri": "/api/shops/documents",
      "summary": "List documents from Mirakl",
      "parameters": {
        "shopIds": {
          "type": "array",
          "required": true,
          "description": "",
          "location": "query",
          "sentAs": "shop_ids",
          "filters" : [
            {
              "method": "join",
              "args" : [",", "@value"]
            }
          ]
        }
      }
    },
    "DownloadDocuments": {
      "httpMethod": "GET",
      "uri": "/api/shops/documents/download",
      "summary": "Download documents from Mirakl",
      "parameters" : {
        "shopIds": {
          "type": "array",
          "required": false,
          "location": "query",
          "sentAs": "shop_ids",
          "filters" : [
            {
              "method": "join",
              "args" : [",", "@value"]
            }
          ]
        },
        "documentIds": {
          "type": "array",
          "required": false,
          "location": "query",
          "sentAs": "document_ids",
          "filters" : [
            {
              "method": "join",
              "args" : [",", "@value"]
            }
          ]
        },
        "typeCodes": {
          "type": "array",
          "required": false,
          "location": "query",
          "sentAs": "type_codes",
          "filters" : [
            {
              "method": "join",
              "args" : [",", "@value"]
            }
          ]
        }
      }
    },
    "GetTransactions": {
      "httpMethod": "GET",
      "uri": "/api/transactions_logs",
      "summary": "Get transactions from Mirakl",
      "parameters": {
        "shopId": {
          "type": "int",
          "description": "[optional] shop id for filtering",
          "location": "query",
          "sentAs": "shop_id"
        },
        "startDate": {
          "type": "object",
          "instanceOf" : "DateTime",
          "description": "creation date for filtering. Format: 'yyyy-MM-dd'T'HH:mm:ss'",
          "location": "query",
          "sentAs": "start_date",
          "filters" : [
            {
              "method": "date_format",
              "args" : ["@value", "Y-m-d\\TH:i:s\\Z"]
            }
          ]
        },
        "endDate": {
          "type": "object",
          "instanceOf" : "DateTime",
          "description": "creation date for filtering. Format: 'yyyy-MM-dd'T'HH:mm:ss'",
          "location": "query",
          "sentAs": "end_date",
          "filters" : [
            {
              "method": "date_format",
              "args" : ["@value", "Y-m-d\\TH:i:s\\Z"]
            }
          ]
        },
        "startTransactionDate": {
          "type": "object",
          "description": " [optional] transaction date for filtering. Format: 'yyyy-MM-dd'T'HH:mm:ss'",
          "instanceOf" : "DateTime",
          "location": "query",
          "sentAs": "start_transaction_date",
          "filters" : [
            {
              "method": "date_format",
              "args" : ["@value", "Y-m-d\\TH:i:s\\Z"]
            }
          ]
        },
        "endTransactionDate": {
          "type": "object",
          "description": " [optional] transaction date for filtering. Format: 'yyyy-MM-dd'T'HH:mm:ss'",
          "instanceOf" : "DateTime",
          "location": "query",
          "sentAs": "end_transaction_date",
          "filters" : [
            {
              "method": "date_format",
              "args" : ["@value", "Y-m-d\\TH:i:s\\Z"]
            }
          ]
        },
        "updatedSince": {
          "type": "object",
          "description": " [optional] last updated date for filtering. Format: 'yyyy-MM-dd'T'HH:mm:ss'",
          "instanceOf" : "DateTime",
          "location": "query",
          "sentAs": "updated_since",
          "filters" : [
            {
              "method": "date_format",
              "args" : ["@value", "Y-m-d'T'H:i:s"]
            }
          ]
        },
        "paymentVoucher": {
          "type": "int",
          "description": "[optional] payment voucher number for filtering",
          "location": "query",
          "sentAs": "payment_voucher"
        },
        "paymentStates": {
          "type": "array",
          "description": "[optional] payment states separated by comma for filtering",
          "location": "query",
          "sentAs": "payment_states",
          "filters" : [
            {
              "method": "join",
              "args" : [",", "@value"]
            }
          ]
        },
        "transactionTypes": {
          "type": "array",
          "description": "[optional] transaction types separated by comma for filtering",
          "location": "query",
          "sentAs": "transaction_types",
          "filters" : [
            {
              "method": "join",
              "args" : [",", "@value"]
            }
          ]
        },
        "paginate": {
          "type": "boolean",
          "default" : false,
          "description": "[optional] Control the pagination usage. Default: false (different from api)",
          "location": "query",
          "sentAs": "paginate",
          "filters" : [
            {
              "method": "json_encode",
              "args" : ["@value"]
            }
          ]
        },
        "accountingDocumentNumber": {
          "type": "int",
          "description": "[optional] an accounting document number for filtering (invoice or credit note number)",
          "location": "query",
          "sentAs": "accounting_document_number"
        },
        "orderIds": {
          "type": "array",
          "description": "[optional] order id list for filtering, using comma (,) as a seprator",
          "location": "query",
          "sentAs": "order_ids",
          "filters" : [
            {
              "method": "join",
              "args" : [",", "@value"]
            }
          ]
        },
        "orderLineIds": {
          "type": "array",
          "description": "[optional] order line id list for filtering, using comma (,) as a seprator",
          "location": "query",
          "sentAs": "order_line_ids",
          "filters" : [
            {
              "method": "join",
              "args" : [",", "@value"]
            }
          ]
        }
      }
    }
  }
}